<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
	x:Class="Plugin.Maui.Accessibility.Sample.MainPage"
	xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	xmlns:a11y="clr-namespace:Plugin.Maui.Accessibility;assembly=Plugin.Maui.Accessibility"
	Title="Plugin.Maui.Accessibility"
	x:DataType="a11y:IAccessibilityInfo">

	<StackLayout Padding="20">

		<Label Text="UseReducedMotion" />
		<Label Margin="0,0,0,10" Text="{Binding UseReducedMotion}" />

		<Label Text="TextScaleFactor" />
		<Label Text="{Binding TextScaleFactor}" />

	</StackLayout>
</ContentPage>
